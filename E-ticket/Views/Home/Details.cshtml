@using E_ticket.Models.ViewModels
@model ModelsAndActorMovieVM
@{
   String status;
    if (Model.Movie.MovieStatus > 0)
    {
        status =" Avilabe";
    }
    else
    {
        status = "Cooming Soon";
    }
}
<div class="movie-details-container">
    <div class="movie-header">
        <div class="movie-poster">
            <img src="/images/movies/@Model.Movie.ImgUrl" alt="Movie Poster" class="img-fluid">
        </div>
        <div class="movie-info">
            <h1>@Model.Movie.Name</h1>

            <div class="movie-meta">
                <span class="badge bg-primary">@Model.Movie.Category.Name</span>
                <span class="rating"><i class="fas fa-star"></i> 8.5/10</span>
                <span class="duration"><i class="fas fa-clock"></i> 148 min</span>
                <span class="status available">@status</span>
            </div>

            <div class="movie-specs">
                <p><strong>Release Date:</strong> @Model.Movie.StartDate</p>
                <p><strong>Director:</strong> Jon Watts</p>

                @foreach (var item in Model.actorMovies)
                {
                    <img src="/images/cast/@item.Actors.ProfilePicture" class="img-thumbnail me-2" style="height: 60px; width: 60px;" alt="@item.Actors.FirstName" />
                }
                <p><strong>Cinema:</strong> @Model.Movie.Cinema.Name</p>
                <p><strong>Price:</strong> <span class="price">@Model.Movie.Price.ToString("c")</span></p>
            </div>

            <div class="action-buttons">
                <a href="#" class="btn btn-primary btn-lg">Book Tickets</a>
                <a href="@Model.Movie.TrailerUrl" class="btn btn-outline-secondary btn-lg" target="_blank">
                    <i class="fas fa-play"></i> Watch Trailer
                </a>
            </div>
        </div>
    </div>

    <div class="movie-content">
        <div class="synopsis">
            <h3>Synopsis</h3>
            <p>@Model.Movie.Description</p>
        </div>

        
    </div>
</div>

<style>
    .movie-details-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .movie-header {
        display: flex;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .movie-poster {
        flex: 0 0 400px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .movie-info {
        flex: 1;
    }

    .movie-meta {
        display: flex;
        gap: 1rem;
        align-items: center;
        margin: 1rem 0;
        color: #666;
    }

    .rating {
        color: #ffc107;
        font-weight: bold;
    }

    .status {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }

        .status.available {
            background-color: #d4edda;
            color: #155724;
        }

    .movie-specs p {
        margin-bottom: 0.5rem;
    }

    .price {
        color: #28a745;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin: 2rem 0;
    }

    .movie-content h3 {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #eee;
    }

    .synopsis {
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

        .gallery-grid img {
            border-radius: 5px;
            transition: transform 0.3s;
        }

            .gallery-grid img:hover {
                transform: scale(1.03);
            }

    
</style>